NILE_RUNTIME := ../../../nile/runtimes/c
CFLAGS       := -I.. -I$(NILE_RUNTIME) \
                -pipe -Wall -Wno-unused \
                -march=nocona -msse2 -mfpmath=sse -m64 -fstrict-aliasing -ffast-math -O3
LDFLAGS      := -L.. -lgezira -L$(NILE_RUNTIME) -lnile -framework Cocoa

%-demo: %-demo.m
	$(CC) $(CFLAGS) $< $(LDFLAGS) -o $@

clean:
	$(RM) -rf *-demo *.dSYM
